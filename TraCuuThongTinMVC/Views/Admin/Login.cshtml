@model TraCuuThongTinMVC.ViewModels.Admin

@{
    ViewData["Title"] = "Login";
}

<h2>Đăng nhập</h2>

@if (ViewBag.ErrorMessage != null)
{
    <p style="color:red">@ViewBag.ErrorMessage</p>
}

<form asp-action="Login" asp-controller="Admin" method="post" class="container mt-4">
    <div class="mb-3">
        <label for="username" class="form-label">Tên đăng nhập:</label>
        <input asp-for="UserNm" class="form-control" id="username" placeholder="Nhập tên đăng nhập" required />
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">Mật khẩu:</label>
        <input asp-for="Passwork" class="form-control" id="password" type="password" placeholder="Nhập mật khẩu" required />
    </div>
    <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
</form>

