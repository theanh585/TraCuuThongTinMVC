@model IEnumerable<TraCuuThongTinMVC.Data.InfSch>

@{
    ViewData["Title"] = "Index";
}

<h1>Danh sách trường học</h1>

<div class="d-flex justify-content-between mb-3">
    <a class="btn btn-primary" asp-action="Create">Create New</a>
    <form method="get" class="d-flex" asp-action="Index">
        <input type="text" name="searchTerm" class="form-control me-2" placeholder="Tìm kiếm theo tên trường..." value="@ViewData["SearchTerm"]" />
        <button type="submit" class="btn btn-success">Search</button>
    </form>
</div>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-12 mb-3">
                <div class="card shadow-box">
                    <div class="card-header bg-success text-white d-flex justify-content-between">
                        <span><strong>Tên Trường:</strong> @Html.DisplayFor(modelItem => item.ScNm)</span>
                        <div>
                            <a class="btn btn-sm btn-warning me-2" asp-action="Edit" asp-route-id="@item.ScId">Edit</a>
                            <a class="btn btn-sm btn-warning me-2" asp-action="Details" asp-route-id="@item.ScId">Detail</a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.ScId">Delete</a>
                        </div>
                    </div>
                    <div class="card-body d-flex">
    <!-- Hình ảnh bên trái -->
    <div class="me-3">
            @if (item.Image != null && item.Image.Length > 0)
            {
                <img src="data:image/png;base64,@Convert.ToBase64String(item.Image)"
                        alt="Image"
                        class="img-thumbnail"
                        style="width: 300px; height: 300px; object-fit: cover;" />
            }
            else
            {
                <div class="img-thumbnail d-flex align-items-center justify-content-center"
                        style="width: 300px; height: 300px; background-color: #f0f0f0; border: 1px solid #ddd;">
                    <span class="text-muted">Không có hình ảnh</span>
                </div>
            }
    </div>

    <!-- Thông tin trường hiển thị trên 1 cột -->
    <div class="flex-grow-1">
        <ul class="list-group list-group-flush">
            <li class="list-group-item"><strong>Khu Vực:</strong> @Html.DisplayFor(modelItem => item.ScArea)</li>
            <li class="list-group-item"><strong>Địa Chỉ:</strong> @Html.DisplayFor(modelItem => item.ScAddress)</li>
            <li class="list-group-item"><strong>Địa chỉ cơ sở:</strong> @Html.DisplayFor(modelItem => item.ScAddress1)</li>
            <li class="list-group-item"><strong>Loại Trường:</strong> @Html.DisplayFor(modelItem => item.ScTcd)</li>
            <li class="list-group-item"><strong>TEL:</strong> @Html.DisplayFor(modelItem => item.Tel)</li>
            <li class="list-group-item"><strong>FAX:</strong> @Html.DisplayFor(modelItem => item.Fax)</li>
            <li class="list-group-item"><strong>View:</strong> @Html.DisplayFor(modelItem => item.Count)</li>
            <li class="list-group-item"><strong>Mail:</strong> @Html.DisplayFor(modelItem => item.Mail)</li>
            <li class="list-group-item"><strong>Website:</strong> @Html.DisplayFor(modelItem => item.Website)</li>
            <li class="list-group-item"><strong>Hiệu Trưởng:</strong> @Html.DisplayFor(modelItem => item.HiuTruong)</li>
            <li class="list-group-item"><strong>Hiệu Phó:</strong> @Html.DisplayFor(modelItem => item.HiuPho)</li>
            <li class="list-group-item"><strong>Người Chịu Trách Nhiệm PL:</strong> @Html.DisplayFor(modelItem => item.NguoiChiuTrachNhiemPhapLuat)</li>
        </ul>
    </div>
</div>

                </div>
            </div>
        }
    </div>
</div>
