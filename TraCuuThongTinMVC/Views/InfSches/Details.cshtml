@model TraCuuThongTinMVC.ViewModels.SchoolDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên Trường
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.School.ScNm)
        </dd>
        <dt class="col-sm-2">
            Khu Vực
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.School.ScArea)
        </dd>
        <dt class="col-sm-2">
            Địa chỉ chính
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.School.ScAddress)
        </dd>
        <dt class="col-sm-2">
            Địa chỉ cơ sở
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.School.ScAddress1)
        </dd>
        <dt class="col-sm-2">
            Loại Trường
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.School.ScTcd)
        </dd>
        <dt class="col-sm-2">
            TEL
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.School.Tel)
        </dd>
        <dt class="col-sm-2">
            FAX
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.School.Fax)
        </dd>
        <dt class="col-sm-2">
            View
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.School.Count)
        </dd>
        <dt class="col-sm-2">
            Mail
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.School.Mail)
        </dd>
        <dt class="col-sm-2">
            Website
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.School.Website)
        </dd>
        <dt class="col-sm-2">
            Hiệu Trưởng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.School.HiuTruong)
        </dd>
        <dt class="col-sm-2">
            Hiệu Phó
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.School.HiuPho)
        </dd>
        <dt class="col-sm-2">
            Đại diện pháp luật
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.School.NguoiChiuTrachNhiemPhapLuat)
        </dd>
        <dt class="col-sm-2">
            Hình ảnh
        </dt>
        <dd class="col-sm-10">
            @if (Model.School.Image != null && Model.School.Image.Length > 0)
            {
                <img src="data:image/png;base64,@Convert.ToBase64String(Model.School.Image)" alt="Image" class="img-thumbnail" width="100" height="100" />
            }
            else
            {
                <p>Không có hình ảnh</p>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
    <hr />
</div>

<h2>Danh sách ngành nghề</h2>
<table class="table">
    <thead>
        <tr>
            <th>Tên ngành</th>
            <th>Mô tả</th>
            <th>Giáo Viên</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var profession in Model.Professions)
        {
            <tr>
                <td>@profession.Nm</td>
                <td>@profession.MoTa</td>
                <td>@profession.Count</td>
                <td>
                    <a asp-action="Edit" asp-controller="ProfessionDbs"  asp-route-id="@profession.Cd" class="btn btn-primary">Sửa</a>

                    <a asp-action="Delete" asp-controller="ProfessionDbs"  asp-route-id="@profession.Cd" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Create" asp-controller="ProfessionDbs" asp-route-scId="@Model.School.ScId" class="btn btn-success btn-sm">Thêm ngành nghề</a>
</div>


