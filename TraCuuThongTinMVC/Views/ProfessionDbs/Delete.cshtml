@model TraCuuThongTinMVC.Data.ProfessionDb

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên Ngành Nghề
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nm)
        </dd>

        <dt class="col-sm-2">
            Mô Tả Ngành Nghề
        </dt>
        <dd class="col-sm-10">
            <textarea class="form-control" rows="3" readonly>@Html.DisplayFor(model => model.MoTa)</textarea>
        </dd>

        <dt class="col-sm-2">
            Thông Tin Giảng Viên
        </dt>
        <dd class="col-sm-10">
            <textarea class="form-control" rows="3" readonly>@Html.DisplayFor(model => model.GvCn)</textarea>
        </dd>
    </dl>

    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Cd" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Details" asp-controller="Infsches" asp-route-id="@Model.ScId">Back to Details</a>
    </form>
</div>
